{
  "version": 2,
  "builds": [
    {
      "src": "client/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "client/**/*.css", 
      "use": "@vercel/static"
    },
    {
      "src": "client/**/*.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/client/login.html"
    },
    {
      "src": "/login",
      "dest": "/client/login.html"
    },
    {
      "src": "/signup",
      "dest": "/client/signup.html"
    },
    {
      "src": "/dashboard",
      "dest": "/client/dashboard.html"
    },
    {
      "src": "/admin",
      "dest": "/client/admin.html"
    },
    {
      "src": "/styles.css",
      "dest": "/client/styles.css"
    },
    {
      "src": "/config.js",
      "dest": "/client/config.js"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico))",
      "dest": "/client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/login.html"
    }
  ]
}
